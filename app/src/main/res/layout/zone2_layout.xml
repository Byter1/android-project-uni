<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"> <!-- Убедимся, что padding отсутствует -->

    <!-- Название второй зоны -->
    <TextView
        android:id="@+id/zone_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Камбаловидная мышца"
        android:textSize="18sp"
        android:padding="0dp"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Изображение второй зоны -->
    <ImageView
        android:id="@+id/image_zone2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/muscle2"
        android:contentDescription="Изображение Камбаловидной мышцы"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/zone_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Описание зоны -->
    <TextView
        android:id="@+id/zone_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Описание: Камбаловидная мышца расположена глубже икроножной мышцы и играет важную роль в поддержании равновесия, ходьбе и поддержании осанки."
        android:textSize="16sp"
        android:padding="0dp"
        android:layout_margin="0dp"
        app:layout_constraintTop_toBottomOf="@id/image_zone2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
